<h2>Ready to Check Out?</h2>

<h4 style="margin-top: 1em;">Total Items: {{itemCount}}</h4>

<div class="row row-cols-1 row-cols-md-3 g-4" style="margin-top: .5em;">

    {{#each cart}}

    <div class="col" style="margin-top: 1em;">
        <div class="card h-100">
            {{!-- <img class=" card-img-top" src="{{image}}" alt="Image Not Found"> --}}
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
            </div>
            <div class="card-footer">
                <small class="text-muted">Quantity: {{quantity}}</small>
            </div>
        </div>
    </div>

    {{/each}}
</div>